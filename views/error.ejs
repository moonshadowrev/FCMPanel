<%- include('partials/csrf', { activeTab: '' }) %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card shadow-sm border-0">
        <div class="card-body text-center p-5">
          <div class="mb-4">
            <i class="fas fa-exclamation-triangle text-danger fa-4x"></i>
          </div>
          <h2 class="card-title mb-3"><%= title %></h2>
          <p class="card-text lead"><%= message %></p>
          <% if (error && error.status) { %>
            <p>Status: <%= error.status %></p>
          <% } %>
          <a href="/" class="btn btn-primary mt-3">Return to Dashboard</a>
        </div>
      </div>
    </div>
  </div>
</div> 